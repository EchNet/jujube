{
	service: {
		serviceModules: [{
			method: "GET",
			path: "/dwarf",
			resource: "{{ resources.dwarves }}"
		},{
			method: "GET",
			path: "/",
			resource: {
				base: "http://ech.net/"
			}
		}],
		postProcessors: [{
			"$class": "net.ech.service.AccessControlPostProcessor"
		},{
			"$class": "net.ech.service.CacheControlPostProcessor"
		}]
	},

	resources: {
		dwarves: {
			"$class": "net.ech.mongo.MongoCollectionResource",
			collectionName: "dwarves",
			mongoDatabase: "{{ mongoDatabases.localTest }}"
		}
	},

	mongoDatabases: {
		localTest: {
			uri: "mongodb://localhost:27027/test"
		}
	}
}
